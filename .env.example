# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_telegram_id_here
ADMIN_USERNAME=your_username_here
BOT_NAME=Customer Service Bot

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Business Configuration
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
TIMEZONE=Asia/Shanghai
AUTO_REPLY_DELAY=1

# Security Configuration
MAX_MESSAGES_PER_MINUTE=30
SESSION_TIMEOUT=3600
ENABLE_ENCRYPTION=false

# Feature Flags
ENABLE_AUTO_REPLY=false
ENABLE_STATISTICS=true
ENABLE_CUSTOMER_HISTORY=true
ENABLE_MULTI_ADMIN=false

# Optional: Offline Message
OFFLINE_MESSAGE=非常抱歉，现在是非工作时间。我们的工作时间是 {start} - {end}。您的消息已记录，我们会在工作时间尽快回复您。

# Optional: Welcome Message
WELCOME_MESSAGE=欢迎使用客服系统！我是您的专属客服助手。
